@model List<Clothes>
@{ ViewData["Title"] = "Index"; }


<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="ProniaAdmin" asp-controller="Plant" asp-action="Create">Create new plant</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        SKU
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Clothes clothes in Model)
                {
    <tr>
        <td>
            <img style="width:150px !important; height:150px; object-fit:contain" src="~/assets/images/website-images/@clothes.ClothesImages.FirstOrDefault(p=>p.IsMain == true)?.Name" alt="">
        </td>
        <td>
            @clothes.Name
        </td>
        <td>
            @clothes.Price
        </td>
        <td>
            @clothes.Desc
        </td>
        <td class="d-flex">
            <div>
                <a asp-area="ProniaAdmin" asp-controller="plant" asp-action="Update" asp-route-id="@clothes.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
            </div>
            <div>
                <a class="btn btn-danger" asp-area="ProniaAdmin" asp-controller="plant" asp-action="Delete" asp-route-id="@clothes.Id"><i class="mdi mdi-delete"></i></a>
            </div>
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>
